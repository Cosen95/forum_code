<%- include('layout/header', { title: '微博 - 首页', isNav: true, list: true,
isInputBlog: true })%>

<div class="container margin-top-20">
  <div class="row">
    <!-- 左侧 -->
    <div class="col-8">
      <!-- 输入框 -->
      <%- include('widgets/input')%>
    </div>
    <!-- 左侧结束 -->

    <!-- 右侧 -->
    <div class="col-4">
      <!-- 个人信息 -->
      <div class="right-item">
        <%- include('widgets/user-info', { userInfo: userData.userInfo, isMe:
        true, amIFollowed: false });%>
      </div>
      <!-- 粉丝 -->
      <%- include('widgets/fans', { count: userData.fansData.count, userList:
      userData.fansData.list })%>
      <!-- 关注 -->
      <%- include('widgets/followers', { count: userData.followersData.count,
      userList: userData.followersData.list })%>
    </div>
    <!-- 右侧结束 -->
  </div>
</div>

<%- include('layout/footer')%>
