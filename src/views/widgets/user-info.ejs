<div class="user-info clear-fix">
  <img src="<%= userInfo.picture%>" class="header-img float-left" />
  <h4 class="user-name"><%= userInfo.nickName%></h4>
</div>

<% if (isMe) { %> <%# 是当前登录用户%>
<p class="bold margin-top-10">
  <a href="/at-me">
    @提到我的 (0)
  </a>
</p>
<% } else { %> <%# 不是当前登录用户%>
<p class="margin-top-10">
  <button id="btn-un-follow" class="btn btn-light" style="display: none;">
    取消关注
  </button>
  <button id="btn-follow" class="btn btn-primary" style="display: none;">
    关注
  </button>
</p>
<% } %>
<script>
  $(function() {
    // 当前用户 id
    var curUserId = `<%= userInfo.id%>`;

    // 按钮，显示和隐藏
    var $btnFollow = $("#btn-follow");
    var $btnUnFollow = $("#btn-un-follow");
    if (`<%= !isMe%>`) {
      // 不是当前用户，则显示“关注”或者“取消关注”
      if (<%= amIFollowed%>) {  // eslint-disable-line
        $btnUnFollow.show();
      } else {
        $btnFollow.show();
      }
    }
    // 关注此人
    // 取消关注
  });
</script>
